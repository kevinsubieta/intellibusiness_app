<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/activity_login_etUserName"
            android:ems="10"
            android:id="@+id/la_etUserName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/la_etPassUser"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/la_etUserName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/activity_login_btnSignUp"
            android:id="@+id/la_btnSignUp"
            android:layout_marginTop="32dp"
            style="@style/Buttons_dialog"
            android:onClick="clcBtnSignUp"
            android:layout_below="@+id/la_etPassUser"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_tvCreateAccount"
            android:id="@+id/la_tvCreateAccount"
            android:onClick="clcCreateNewAccount"
            android:layout_below="@+id/la_btnSignUp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</LinearLayout>